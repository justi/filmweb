<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Release date:</strong>
  <%= @movie.release_date %>
</p>

<p>
  <strong>Duration time:</strong>
  <%= @movie.duration_time %>
</p>

<p>
  <strong>Director:</strong>
  <%= @movie.director.name_with_initial %>
</p>

<p>
  <strong>Country:</strong>
  <%= @movie.country.name %>
</p>
<p>Actors:
  <ul class="list-group">
    <% if @movie.actors.each do |actor| %>
      <li><%= actor.name_with_initial %></li>
    <% end.empty? %>
      No actors yet
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
